<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/loginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="100dp"
                    android:src="@drawable/slr_logo"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back!"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:fontFamily="@font/aileron_bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="60dp"
                    android:id="@+id/text3"
                    android:includeFontPadding="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login first"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:letterSpacing="0.03"
                    android:fontFamily="@font/aileron_thin"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:includeFontPadding="false"
                    android:layout_below="@id/text3"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_back2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/mail"
                    android:contentDescription="@string/app_name"
                    app:tint="@color/white" />
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@color/circleColor"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textColor="@color/textOffColor"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/aileron_regular"
                        android:includeFontPadding="false"/>

                    <EditText
                        android:id="@+id/edit_text_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:fontFamily="@font/aileron_regular"
                        android:hint="@string/prompt_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:backgroundTint="@android:color/transparent"
                        android:textColorHint="@color/textOffColor"
                        android:importantForAutofill="no" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_back2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/lock_pass"
                    android:contentDescription="@string/app_name"
                    app:tint="@color/white" />
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@color/circleColor"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        android:textColor="@color/textOffColor"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/aileron_regular"
                        android:includeFontPadding="false"/>

                    <EditText
                        android:id="@+id/edit_text_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:fontFamily="@font/aileron_regular"
                        android:hint="@string/prompt_password"
                        android:backgroundTint="@android:color/transparent"
                        android:textColorHint="@color/textOffColor"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:importantForAutofill="no" />
                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/regProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminateTint="@color/white"
                android:padding="6dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_signin_btn"
                android:text="@string/action_sign_in_short"
                android:textAllCaps="false"
                android:letterSpacing="0.2"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:fontFamily="@font/aileron_regular" />

            <Button
                android:id="@+id/forgotPasswordBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/forgotpass"
                android:letterSpacing="0.1"
                android:layout_gravity="end"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/aileron_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:onClick="forgotPassword"
                android:textColor="@color/cardColor" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't have account?"
                android:textColor="@color/white"
                android:fontFamily="@font/aileron_thin"
                android:letterSpacing="0.1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginTop="36dp"/>

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_signup_btn"
                android:padding="2dp"
                android:text="@string/signup"
                android:textAllCaps="false"
                android:letterSpacing="0.2"
                android:textSize="17sp"
                android:onClick="gotoRegisterPage"
                android:includeFontPadding="false"
                android:fontFamily="@font/aileron_regular"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>