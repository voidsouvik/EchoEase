<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/regUserPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_avatar"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_back2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user_id"
                    android:contentDescription="@string/app_name"
                    app:tint="@color/white"
                    android:layout_marginStart="12dp"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@color/circleColor"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        android:textColor="@color/textOffColor"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/aileron_regular"
                        android:includeFontPadding="false"/>

                    <EditText
                        android:id="@+id/edit_text_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:fontFamily="@font/aileron_regular"
                        android:hint="@string/displayName"
                        android:textColorHint="@color/textOffColor"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:importantForAutofill="no" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailLayout"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/edittext_back2"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/white"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/mail"
                    android:contentDescription="@string/app_name"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@color/circleColor"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/textOffColor"
                        android:fontFamily="@font/aileron_regular"
                        android:includeFontPadding="false"/>

                    <EditText
                        android:id="@+id/edit_text_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:fontFamily="@font/aileron_regular"
                        android:hint="@string/prompt_email"
                        android:textColorHint="@color/textOffColor"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:importantForAutofill="no" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordLayout"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_back2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/white"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/lock_pass"
                    android:contentDescription="@string/app_name"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@color/circleColor"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/textOffColor"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/aileron_regular"
                        android:includeFontPadding="false"/>

                    <EditText
                        android:id="@+id/edit_text_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:fontFamily="@font/aileron_regular"
                        android:hint="@string/prompt_password"
                        android:textColorHint="@color/textOffColor"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:importantForAutofill="no" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/confirmPasswordLayout"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_back2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/white"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/lock_pass"
                    android:contentDescription="@string/app_name"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@color/circleColor"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"
                        android:textColor="@color/textOffColor"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/aileron_regular"
                        android:includeFontPadding="false"/>

                    <EditText
                        android:id="@+id/edit_text_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:fontFamily="@font/aileron_regular"
                        android:hint="@string/prompt_password"
                        android:textColorHint="@color/textOffColor"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:importantForAutofill="no" />

                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/regProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:indeterminateTint="@color/white"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_signin_btn"
                android:text="@string/signup"
                android:textAllCaps="false"
                android:letterSpacing="0.2"
                android:textSize="17sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/aileron_regular"
                android:textColor="@color/bgColor" />

            <TextView
                android:id="@+id/alreadyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/white"
                android:fontFamily="@font/aileron_thin"
                android:letterSpacing="0.1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ripple_signup_btn"
                android:text="Login"
                android:textAllCaps="false"
                android:onClick="gotologinpage"
                android:letterSpacing="0.2"
                android:textSize="17sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/aileron_regular"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>